<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04DA72"
    tools:context=".compost">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="263dp"
        android:layout_height="176dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="299dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/compost"
        android:src="@drawable/compost"
        />

    <TextView
        android:id="@+id/landfill"
        android:layout_width="175dp"
        android:layout_height="67dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="This should go into a compost bin!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#010004"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/imgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>