<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F31365"
    tools:context=".none">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="133dp"
        android:layout_height="232dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="299dp"
        android:background="#F31365"
        android:backgroundTint="#F31365"
        android:src="@drawable/none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/none" />

    <TextView
        android:id="@+id/landfill"
        android:layout_width="199dp"
        android:layout_height="90dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="We don't know where this should go..."
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#010004"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/imgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>